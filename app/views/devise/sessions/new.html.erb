<h2>Sign In</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class: 'form-horizontal', role: 'form'}) do |f| %>
  <div class='form-group'>
    <%= f.label :email, class: 'col-lg-2 control-label' %>
    <div class='col-lg-6'>
      <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
    </div>
  </div>

  <div class='form-group'>
    <%= f.label :password, class: 'col-lg-2 control-label'  %>
    <div class='col-lg-6'>
      <%= f.password_field :password, class: 'form-control' %>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <%= f.check_box :remember_me, {checked: true, style: 'display: none'} %>
  <% end -%>

  <div class='form-group'>
    <div class='col-lg-2'></div>  
    <div class='col-lg-6'>
      <%= f.submit "Sign in", class: 'btn btn-primary' %>
      <%= link_to "Don't have an account?", new_end_user_registration_path, class: 'pull-right' %>
    </div>
  </div>

<% end %>